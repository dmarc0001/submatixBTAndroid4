<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:id="@+id/inProgressOuterLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".AreaDetailActivity" >

<TextView
    android:id="@+id/inProgressTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:drawableTop="@drawable/help2"
    android:gravity="center"
    android:text="@string/in_progress_msg"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:textColor="@color/connectFragment.disconnectText" >

</TextView>

</LinearLayout>