<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/readLogOuterLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp" >

    <ListView
        android:id="@+id/readLogDirListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/icon_margin_left"
        android:layout_marginRight="@dimen/icon_margin_left"
        android:layout_weight="0.75"
        android:drawSelectorOnTop="false" />
    
    <Button
        style="?android:attr/buttonBarButtonStyle"
        android:id="@+id/readLogDirButton"
        android:layout_width="140dp"
        android:layout_height="68dp"
        android:layout_marginBottom="@dimen/icon_margin_left"
        android:layout_marginRight="@dimen/icon_margin_left"
        android:layout_marginTop="@dimen/icon_margin_left"
        android:hapticFeedbackEnabled="true"
        android:text="@string/logread_doit_button"
        android:textColor="@color/connectToastAlert.textColor" />
    
</LinearLayout>