<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/logGraphOuterLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <ListView
        android:id="@+id/graphLogsListView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/icon_margin_left"
        android:layout_marginRight="@dimen/icon_margin_left"
        android:layout_weight="0.75"
        android:drawSelectorOnTop="false" />

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/changeGraphDeviceButton"
            android:layout_width="140dp"
            android:layout_height="58dp"
            android:layout_marginRight="@dimen/icon_margin_left"
            android:layout_marginTop="@dimen/icon_margin_left"
            android:hapticFeedbackEnabled="true"
            android:text="@string/graphlog_change_drive_button"
            android:textColor="@color/exportDeviceButton.textColor" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/graphLogsButton"
            android:layout_width="140dp"
            android:layout_height="58dp"
            android:layout_marginRight="@dimen/icon_margin_left"
            android:layout_marginTop="@dimen/icon_margin_left"
            android:hapticFeedbackEnabled="true"
            android:text="@string/graphlog_do_view"
            android:textColor="@color/exportLogsButton.textColor" />
        
        </LinearLayout>

    

</LinearLayout>
