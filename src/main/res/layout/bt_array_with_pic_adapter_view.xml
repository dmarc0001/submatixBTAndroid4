<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/btArrayListIconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/icon_margin_left"
        android:layout_marginStart="@dimen/icon_margin_left"
        android:layout_marginTop="@dimen/icon_margin_top"
        android:contentDescription="@string/array_with_pic_adapter_dummy"
        android:src="@drawable/bluetooth_icon_bw" />

    <TextView
        android:id="@+id/btArrayListTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btArrayListIconView"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/btArrayListIconView"
        android:layout_toEndOf="@+id/btArrayListIconView"
        android:gravity="center_horizontal"
        android:text="@string/array_with_pic_adapter_dummy"
        android:textAppearance="@style/menuTextAppearance" />
    
</RelativeLayout>