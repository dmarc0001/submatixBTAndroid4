<resources xmlns:android = "http://schemas.android.com/apk/res/android">

  <!--
      Style für SIZE sw800dp
  -->
  <!-- Application theme. -->
  <style name = "AppDarkTheme" parent = "android:Theme.Holo">
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->
  </style>

  <style name = "AppLightTheme" parent = "android:Theme.Holo.Light.DarkActionBar">
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->
  </style>

  <style name = "preferenceCategoryCommon">
    <item name = "android:background">@color/preferenceCategoryDark.backgroundColor</item>
    <item name = "android:textColor">@color/preferenceCategoryDark.textColor</item>
    <item name = "android:textAppearance">?android:attr/textAppearanceLarge</item>
    <item name = "android:textStyle">bold</item>
    <!--  hier GROSSE Texte bei den Kategorien -->
    <item name = "android:textSize">24sp</item>
    <item name = "android:paddingTop">24dp</item>
    <item name = "android:paddingLeft">10dp</item>
  </style>

  <style name = "preferenceCategoryDark" parent = "preferenceCategoryCommon">
    <item name = "android:background">@color/preferenceCategoryDark.backgroundColor</item>
    <item name = "android:textColor">@color/preferenceCategoryDark.textColor</item>
  </style>


  <style name = "preferenceCategoryLight" parent = "preferenceCategoryCommon">
    <item name = "android:background">@color/preferenceCategoryLight.backgroundColor</item>
    <item name = "android:textColor">@color/preferenceCategoryLight.textColor</item>
  </style>

  <style name = "selectableItemBackground">
    <item name = "android:background">@color/preferenceDark.backgroundColor</item>
  </style>

  <style name = "commToastCommon">
    <item name = "android:textAppearance">?android:attr/textAppearanceLarge</item>
    <item name = "android:textStyle">bold</item>
    <item name = "android:paddingLeft">30dp</item>
    <item name = "android:paddingRight">30dp</item>
    <item name = "android:paddingTop">20dp</item>
    <item name = "android:paddingBottom">20dp</item>
  </style>

  <style name = "commToastLight" parent = "commToastCommon">
    <item name = "android:background">@color/connectToastLight.backgroundColor</item>
    <item name = "android:textColor">@color/connectToastLight.textColor</item>
  </style>

  <style name = "commToastDark" parent = "commToastCommon">
    <item name = "android:background">@color/connectToastDark.backgroundColor</item>
    <item name = "android:textColor">@color/connectToastDark.textColor</item>
  </style>

  <style name = "commToastAlert" parent = "commToastCommon">
    <item name = "android:background">@color/connectToastAlert.backgroundColor</item>
    <item name = "android:textColor">@color/connectToastAlert.textColor</item>
  </style>

  <!-- Textgrößen angepasst -->
  <style name = "menuTextAppearance">
    <item name = "android:textSize">22sp</item>
  </style>


</resources>