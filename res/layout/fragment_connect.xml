<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/connectOuterLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".gui.areaDetailActivity" >
    
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/connectLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_left_right_margin"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/connectBlueToothDeviceSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75" />

       <ToggleButton
           android:id="@+id/connectTroggleButton"
           android:layout_width="180dp"
           android:layout_height="wrap_content"
           android:text="@string/connect_button_off_text" />
            
    </LinearLayout>

    <Button
        android:id="@+id/connectDiscoverButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/default_left_right_margin"
        android:text="@string/connect_discover_button_title" />
    
</LinearLayout>
