<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/readLogMarkedIconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/icon_margin_left"
        android:layout_marginTop="@dimen/icon_margin_top"
        android:contentDescription="@string/array_with_pic_adapter_dummy"
        android:src="@drawable/star_empty_yellow" />
    
    <!-- android:layout_alignParentLeft="true" -->
    <ImageView
        android:id="@+id/readLogListIconView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/readLogMarkedIconView"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/icon_margin_left"
        android:layout_marginTop="@dimen/icon_margin_top"
        android:contentDescription="@string/array_with_pic_adapter_dummy"
        android:src="@drawable/unsaved_log" />

    <ImageView
        android:id="@+id/readLogLeftActiveIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@+id/readLogListIconView"
        android:contentDescription="@string/app_name"
        android:src="@drawable/deactivated_and_space" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/readLogLeftActiveIndicator"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/readLogNameListTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/array_with_pic_adapter_dummy"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/readLogDetailsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_margin_left"
            android:text="@string/app_name" />

    </LinearLayout>

    <ImageView
        android:id="@+id/readLogListRightActiveIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="0dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/deactivated_and_space" />

</RelativeLayout>