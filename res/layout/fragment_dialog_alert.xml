<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/icon_margin_left"
        android:contentDescription="STOP"
        android:src="@drawable/ne_entry" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/icon_margin_left"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/alertHeadlineTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/connectToastAlert.textColor" />

        <TextView
            android:id="@+id/alertMessageTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/standart_margin"
            android:gravity="fill"
            android:text="@string/dummy_headline" />
    </LinearLayout>

</LinearLayout>